import pandas as pd, matplotlib.pyplot as plt, glob

f=glob.glob("*.dat")

dfi=pd.read_csv(f[0], sep="\s+")
dfs=pd.read_csv(f[1], sep="\s+")

xi,ui = dfi.iloc[:,0], dfi.iloc[:,1]
xs,us = dfs.iloc[:,0], dfs.iloc[:,1]


plt.plot(xi,ui,'--', label="initial")
plt.plot(xs,us,label="solution")
plt.xlabel("Distance",fontsize=18)
plt.ylabel("Amplitude", fontsize=18)
plt.legend()
plt.show()
